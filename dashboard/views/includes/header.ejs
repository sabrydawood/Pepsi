<header class="main-header">
  <!-- Logo -->
  <div class=" text-center trans py-5 logo btn btn-outline-danger" >
  <a href="/" class="d-flex ">
    <!-- mini logo for sidebar mini 50x50 pixels -->
 <span >
  <img src="<%= bot.user.avatarURL() %>" width="30" />
 </span>
    <!-- logo for regular state and mobile devices -->
    <span class="text-danger"><b> <%= bot.user.username %></b></span>
  </a>
</div>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a class="sidebar-toggle trans" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu trans">
      <ul class="nav navbar-nav">
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle trans" data-toggle="dropdown">
            <img src="<%= user.displayAvatar %>" class="user-image avatar" alt="User Image" />
 <span class=""><%= user.username %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- Menu Footer-->
            <li class="user-footer" style="min-width: auto !important">
   
<a href="/user" class="btn rounded btn-block btn-danger"><%= user.username %> Profile </a>
            </li>
<li class="user-footer" style="min-width: auto !important">

                <a href="/logout" class="btn rounded btn-block btn-danger">Sign out</a>

            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
	<% if(success != ''){ %>
  <div class="fixed-top alert alert-success">
   <button type="button" class="close" data-dismiss="alert">×</button>
    <div class="alert-icon">
    <span class="oi oi-flag"></span>
                        </div>
 <p class="mb-0"> <strong> Success! </strong>
		<%=success%> </p>
		<div id='progressbar'></div>
                      </div>
                  <% } %> 
     <% if(error != ''){ %>
   <div class="fixed-top alert alert-danger">
   <button type="button" class="close" data-dismiss="alert">×</button>
    <div class="alert-icon">
    <span class="oi oi-flag"></span>
                        </div>
  <p class="mb-0"><strong> Failed </strong> <%=error%> </p>
		
		<div id='progressbar'></div>
                      </div>
                <% } %> 
</header>
