<header class="main-header">
  <!-- Logo -->
  <div class=" text-center py-5 logo btn btn-outline-danger" >
  <a href="/" class="d-flex ">
    <!-- mini logo for sidebar mini 50x50 pixels -->
 <span >
  <img src="<%= bot.user.avatarURL() %>" width="30" />
 </span>
    <!-- logo for regular state and mobile devices -->
    <span class="text-danger"><b> <%= bot.user.username %></b></span>
  </a>
</div>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="<%= user.displayAvatar %>" class="user-image" alt="User Image" />
            <span class="hidden-xs"><%= user.tag %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- Menu Footer-->
            <li class="user-footer" style="min-width: auto !important">
              <div>
                <a href="/logout" class="btn rounded btn-block btn-danger">Sign out</a>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
